{
    "scopeName": "source.butterflow",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.butterflow",
                    "match": "\\b(if|else|then|where|and|or)\\b"
                },
                {
                    "name": "storage.type.butterflow",
                    "match": "\\b(Signal|Float|Int|Bool|String)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.butterflow",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.butterflow",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.butterflow",
                    "match": "#.*$"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.butterflow",
                    "match": "\\b(\\d+(\\.\\d+)?)\\b"
                },
                {
                    "name": "constant.language.butterflow",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.butterflow",
                    "match": "\\b(ts_diff|ts_decay_exp|clip|divide|add|subtract|equals|ts_max|ts_min|ts_delay|shift)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.butterflow",
                    "match": "="
                },
                {
                    "name": "keyword.operator.comparison.butterflow",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.arithmetic.butterflow",
                    "match": "(\\+|-|\\*|/)"
                }
            ]
        }
    }
}